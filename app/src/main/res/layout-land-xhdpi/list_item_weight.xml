<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="@color/background_light"
            android:gravity="center"
            >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
            <TextView android:layout_height="fill_parent"
                      android:textSize="@dimen/text_nano"
                      android:layout_width="wrap_content"
                      android:id="@+id/bottomText"
                      android:textColor="@color/background2" android:focusable="false" android:focusableInTouchMode="false"
                      android:clickable="false"
                    />
            <TextView android:layout_height="fill_parent"
                      android:textSize="@dimen/text_micro"
                      android:layout_width="wrap_content"
                      android:id="@+id/topText"
                      android:textColor="@color/background2" android:focusable="false" android:focusableInTouchMode="false"
                      android:clickable="false" android:textStyle="bold"
                    />
        </LinearLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/ic_action_light_delete" android:clickable="true"
                android:onClick="removeWeightOnClick"
                android:layout_gravity="center"
                android:layout_margin="@dimen/corners2"/>
    </LinearLayout>
</LinearLayout>