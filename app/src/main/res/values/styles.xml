<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titleTextStyle" >
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearanceWindowTitle</item>
        <item name="android:shadowColor">@color/blue</item>
        <item name="android:shadowRadius">2.75</item>
        <item name="android:paddingTop">@dimen/stroke</item>
    </style>

    <style name="MyActionBar"   parent="android:Widget.ActionBar">
        <item name="android:titleTextStyle">@style/titleTextStyle</item>
        <item name="android:windowTitleSize">@dimen/title_size</item>
    </style>

    <style name="MyActionBarTabText"    >
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!--<style name="Preferences.white" parent="android:Theme.Light.NoTitleBar">
    </style>-->

    <style name="Widget.TextView.ListSeparator" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:textSize">@dimen/text_small</item>-->
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomButtonImage">
        <item name="android:background">@drawable/image_selector</item>
        <item name="android:layout_marginLeft">@dimen/corners3</item>
        <!--<item name="android:layout_marginTop">@dimen/corners</item>-->
        <item name="android:layout_marginRight">@dimen/corners3</item>
        <!--<item name="android:layout_marginBottom">@dimen/corners</item>-->
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">@dimen/corners</item>
        <item name="android:paddingBottom">@dimen/corners</item>
    </style>

    <style name="TextAppearanceWindowTitle" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SpanTextKg" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large_x</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SpanTextBattery" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="shadowEffect">
        <!--<item name="android:paddingLeft">4px</item>-->
        <!--<item name="android:paddingBottom">4px</item>-->
        <!--<item name="android:textColor">#FFFFFF</item>-->
        <!--<item name="android:textSize">25sp</item>-->
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

</resources>